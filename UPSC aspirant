#include <iostream>
#include <string>
using  namespace std;
void GS1();
void GS2();
void GS3();
void GS4();
int main()
    {
        int Course_Choice;
    cout<<"Press 1 for GS1(Hitory,Art & Culture,Geography,Remaining Topics):\n";
    cout<<"Press 2 for GS2(Governance,Constitution & Polity,Social Justice,International Relation):\n";
    cout<<"Press 3 for GS3(Economy,Environment,Internal Security,Disaster Management,Science & Technology):\n";
    cout<<"Press 4 for GS4(Ethics):\n";
    cout<<"----------------------------------------------------------------------------------------------------------------- \n";
    cout<<"Enter your Course_Choice :";
    cin>>Course_Choice;
    cout<<"----------------------------------------------------------------------------------------------------------------- \n";
    switch(Course_Choice)
{
    case 1: 
    GS1();
    break;
    case 2:
    GS2();
    break;
    case 3:
    GS3();
    break;
    case 4:
    GS4();
    break; 
    default:
    cout<<"invalid!!!!";
    break;
    cout<<"----------------------------------------------------------------------------------------------------------------- \n";
}
return 0;
    }
